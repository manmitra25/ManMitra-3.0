# ========================================
# ManMitra 3.0 Node.js Backend Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/manmitra3
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (generate new ones for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here
FIELD_ENCRYPTION_KEY=your-field-level-encryption-key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# FastAPI Service Configuration
FASTAPI_BASE_URL=http://localhost:8000
FASTAPI_API_KEY=your-fastapi-api-key-for-inter-service-auth

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Chat Configuration
CHAT_HISTORY_LIMIT=50
CHAT_ANONYMOUS_LIMIT=5
CHAT_DAILY_LIMIT=20
CHAT_TIMEOUT=3600000

# Booking Configuration
BOOKING_HOLD_DURATION=300000
BOOKING_NOTIFICATION_DELAY=5000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=ManMitra <noreply@manmitra.com>

# SMS Configuration (for emergency alerts)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=MANMITRA
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=60000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_RETENTION_DAYS=90

# Crisis Management Configuration
CRISIS_ESCALATION_DELAY=300000
EMERGENCY_CONTACT_PHONE=104
EMERGENCY_CONTACT_EMAIL=emergency@manmitra.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Feature Flags
ENABLE_ANONYMOUS_CHAT=true
ENABLE_FORUM_MODERATION=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_MOOD_TRACKING=true
ENABLE_COUNSELOR_BOOKING=true
ENABLE_CRISIS_ALERTS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/manmitra.log

# Development/Testing
MOCK_AI_RESPONSES=false
DEBUG_MODE=true
ENABLE_SWAGGER=true

# Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
